[
  {
    "id": "h001",
    "source": "النبي (ص)",
    "text": "خيركم من تعلم القرآن وعلمه",
    "tags": ["قرآن", "علم"],
    "ref": "صحيح البخاري"
  },
  {
    "id": "h002",
    "source": "النبي (ص)",
    "text": "المؤمن مرآة المؤمن",
    "tags": ["إيمان", "أخلاق"],
    "ref": "الأدب المفرد"
  },
  {
    "id": "h003",
    "source": "النبي (ص)",
    "text": "إنما الأعمال بالنيات",
    "tags": ["نية", "عمل"],
    "ref": "صحيح البخاري"
  },
  {
    "id": "h004",
    "source": "النبي (ص)",
    "text": "الدين النصيحة",
    "tags": ["نصيحة", "دين"],
    "ref": "صحيح مسلم"
  },
  {
    "id": "h005",
    "source": "النبي (ص)",
    "text": "من كان يؤمن بالله واليوم الآخر فليقل خيراً أو ليصمت",
    "tags": ["كلام", "إيمان"],
    "ref": "صحيح البخاري"
  },
  {
    "id": "h006",
    "source": "النبي (ص)",
    "text": "تبسمك في وجه أخيك صدقة",
    "tags": ["صدقة", "أخلاق"],
    "ref": "سنن الترمذي"
  },
  {
    "id": "h007",
    "source": "النبي (ص)",
    "text": "اتق الله حيثما كنت، وأتبع السيئة الحسنة تمحها، وخالق الناس بخلق حسن",
    "tags": ["تقوى", "أخلاق"],
    "ref": "سنن الترمذي"
  },
  {
    "id": "h008",
    "source": "النبي (ص)",
    "text": "لا يؤمن أحدكم حتى يحب لأخيه ما يحب لنفسه",
    "tags": ["إيمان", "محبة"],
    "ref": "صحيح البخاري"
  },
  {
    "id": "h009",
    "source": "النبي (ص)",
    "text": "الراحمون يرحمهم الرحمن، ارحموا من في الأرض يرحمكم من في السماء",
    "tags": ["رحمة"],
    "ref": "سنن أبي داود"
  },
  {
    "id": "h010",
    "source": "النبي (ص)",
    "text": "من لا يرحم لا يرحم",
    "tags": ["رحمة"],
    "ref": "صحيح البخاري"
  },
  {
    "id": "h011",
    "source": "نهج البلاغة",
    "text": "العلم خير من المال، العلم يحرسك وأنت تحرس المال",
    "tags": ["علم", "مال"],
    "ref": "نهج البلاغة، حكمة 147"
  },
  {
    "id": "h012",
    "source": "نهج البلاغة",
    "text": "من نصب نفسه للناس إماماً فليبدأ بتعليم نفسه قبل تعليم غيره",
    "tags": ["علم", "قيادة"],
    "ref": "نهج البلاغة، حكمة 73"
  },
  {
    "id": "h013",
    "source": "نهج البلاغة",
    "text": "النفس كالزجاجة والعلم كالسراج",
    "tags": ["علم", "نفس"],
    "ref": "نهج البلاغة"
  },
  {
    "id": "h014",
    "source": "نهج البلاغة",
    "text": "الصبر صبران: صبر على ما تكره، وصبر عما تحب",
    "tags": ["صبر"],
    "ref": "نهج البلاغة، حكمة 55"
  },
  {
    "id": "h015",
    "source": "نهج البلاغة",
    "text": "من كساه الحياء ثوبه لم ير الناس عيبه",
    "tags": ["حياء", "أخلاق"],
    "ref": "نهج البلاغة، حكمة 223"
  },
  {
    "id": "h016",
    "source": "نهج البلاغة",
    "text": "قيمة كل امرئ ما يحسنه",
    "tags": ["عمل", "قيمة"],
    "ref": "نهج البلاغة، حكمة 81"
  },
  {
    "id": "h017",
    "source": "نهج البلاغة",
    "text": "من أطال الأمل أساء العمل",
    "tags": ["أمل", "عمل"],
    "ref": "نهج البلاغة، حكمة 21"
  },
  {
    "id": "h018",
    "source": "نهج البلاغة",
    "text": "ما أضمر أحد شيئاً إلا ظهر في فلتات لسانه وصفحات وجهه",
    "tags": ["نية", "أخلاق"],
    "ref": "نهج البلاغة، حكمة 26"
  },
  {
    "id": "h019",
    "source": "نهج البلاغة",
    "text": "لا تستح من إعطاء القليل، فإن الحرمان أقل منه",
    "tags": ["عطاء", "سخاء"],
    "ref": "نهج البلاغة، حكمة 252"
  },
  {
    "id": "h020",
    "source": "نهج البلاغة",
    "text": "أفضل الأعمال ما أكرهت نفسك عليه",
    "tags": ["عمل", "جهاد النفس"],
    "ref": "نهج البلاغة، حكمة 288"
  },
  {
    "id": "h021",
    "source": "الإمام الحسين (ع)",
    "text": "الناس عبيد الدنيا والدين لعق على ألسنتهم يحوطونه ما درت معايشهم",
    "tags": ["دنيا", "دين"],
    "ref": "تاريخ الطبري"
  },
  {
    "id": "h022",
    "source": "الإمام الحسين (ع)",
    "text": "إن لم يكن لكم دين وكنتم لا تخافون المعاد فكونوا أحراراً في دنياكم",
    "tags": ["حرية", "دين"],
    "ref": "مقتل الحسين"
  },
  {
    "id": "h023",
    "source": "الإمام الحسين (ع)",
    "text": "لا تقل ما لا تعلم، بل لا تقل كل ما تعلم",
    "tags": ["علم", "كلام"],
    "ref": "بحار الأنوار"
  },
  {
    "id": "h024",
    "source": "الإمام الحسين (ع)",
    "text": "من قبل عطاءك فقد أعانك على الكرم",
    "tags": ["كرم", "عطاء"],
    "ref": "بحار الأنوار"
  },
  {
    "id": "h025",
    "source": "الإمام الحسين (ع)",
    "text": "إن كان الدين لم يكن علم وإن كان العلم لم يكن دين",
    "tags": ["دين", "علم"],
    "ref": "تحف العقول"
  },
  {
    "id": "h026",
    "source": "الإمام الحسين (ع)",
    "text": "الاستدراج من الله سبحانه لعبده أن يسبغ عليه النعم ويمنعه الشكر",
    "tags": ["شكر", "نعمة"],
    "ref": "تحف العقول"
  },
  {
    "id": "h027",
    "source": "الإمام الحسين (ع)",
    "text": "خير الدنيا والآخرة في خمس خصال: غنى النفس، وكف الأذى، وكسب الحلال، ولباس التقوى، والثقة بالله",
    "tags": ["تقوى", "أخلاق"],
    "ref": "بحار الأنوار"
  },
  {
    "id": "h028",
    "source": "الإمام الحسين (ع)",
    "text": "لا تعمل بالرأي ما وجدت عنه مندوحة",
    "tags": ["رأي", "حكمة"],
    "ref": "تحف العقول"
  },
  {
    "id": "h029",
    "source": "الإمام الحسين (ع)",
    "text": "طوبى لمن أصلح ما بينه وبين الله، وعمل لآخرته، وقنع بما رزقه الله",
    "tags": ["قناعة", "آخرة"],
    "ref": "بحار الأنوار"
  },
  {
    "id": "h030",
    "source": "الإمام الحسين (ع)",
    "text": "ما أخذ الله طاقة أحد إلا وضع عنه طاعته، ولا أخذ قدرته إلا وضع عنه كلفته",
    "tags": ["رحمة", "تكليف"],
    "ref": "تحف العقول"
  }
]
